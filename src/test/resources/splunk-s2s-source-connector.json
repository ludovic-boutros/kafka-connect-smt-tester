{
  "name": "SplunkS2SSourceConnector",
  "config": {
    "connector.class": "io.confluent.connect.splunk.s2s.SplunkS2SSourceConnector",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "transforms": "extractTopic,addPrefixToTopic,replaceField,hoist,updateSplunkIndex",
    "transforms.extractTopic.type": "io.confluent.connect.transforms.ExtractTopic$Value",
    "transforms.extractTopic.field": "index",
    "transforms.extractTopic.skip.missing.or.null": "true",
    "transforms.addPrefixToTopic.type": "org.apache.kafka.connect.transforms.RegexRouter",
    "transforms.addPrefixToTopic.regex": ".*",
    "transforms.addPrefixToTopic.replacement": "splunk.$0",
    "transforms.replaceField.type": "org.apache.kafka.connect.transforms.ReplaceField$Value",
    "transforms.replaceField.exclude": "time",
    "transforms.hoist.type": "org.apache.kafka.connect.transforms.ExtendedHoistField$Value",
    "transforms.hoist.field": "fields",
    "transforms.hoist.keepInRootFieldNames": "event,host,source,index,sourcetype",
    "transforms.updateSplunkIndex.type": "com.github.jcustenborder.kafka.connect.transform.common.PatternMapString$Value",
    "transforms.updateSplunkIndex.src.field.name": "index",
    "transforms.updateSplunkIndex.dest.field.name": "index",
    "transforms.updateSplunkIndex.value.pattern": "^(.*)$",
    "transforms.updateSplunkIndex.value.replacement": "kafka-$1",
    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "splunk.s2s.port": "9997",
    "kafka.topic": "main",
    "splunk.s2s.ssl.enable": "true",
    "splunk.s2s.ssl.key.path": "/etc/kafka/server.key",
    "splunk.s2s.ssl.cert.chain.path": "/etc/kafka/server-cert.pem",
    "value.converter.schemas.enable": "false"
  }
}